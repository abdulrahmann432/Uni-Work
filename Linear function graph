<!DOCTYPE html>
<html>
  <head>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
  </head>
  <body>
    <div id="myPlot" style="width:100%;max-width:700px"></div>

    <script>
      // New function expression
      let exp = "3 * x - 10";

      // Generate values
      const xValues = [];
      const yValues = [];
      for (let x = -20; x <= 50; x += 5) {
        xValues.push(x);
        yValues.push(eval(exp));
      }

      // Define Data (changed color and style)
      const data = [{
        x: xValues,
        y: yValues,
        mode: "lines+markers",
        type: "scatter",
        line: { color: "orange", width: 3 },
        marker: { color: "red", size: 6 }
      }];

      // Define Layout
      const layout = {
        title: "y = " + exp,
      };

      // Display using Plotly
      Plotly.newPlot("myPlot", data, layout);
    </script>
  </body>
</html>
