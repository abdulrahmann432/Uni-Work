<!DOCTYPE html>
<html>
<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<body>

<div id="myPlot" style="width:100%;max-width:700px"></div>

<script>
const xArray = [62, 53, 47, 30, 18];
const yArray = ["Italy", "France", "Spain", "USA", "Argentina"];

const data = [{
  x: yArray,
  y: xArray,
  type: "bar",
  marker: {color: "rgba(0,128,255,0.6)"}
}];

const layout = {
  title: "World Wine Production 2025",
  xaxis: {title: "Country"},
  yaxis: {title: "Production (millions of liters)"}
};

Plotly.newPlot("myPlot", data, layout);
</script>

